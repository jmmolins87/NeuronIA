# ==========================================
# CORE - Application & Database
# ==========================================
NODE_ENV="development"
APP_URL="https://example.com"

DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"
# DATABASE_URL_UNPOOLED="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"


# ==========================================
# ADMIN - Authentication & Authorization
# ==========================================
ADMIN_SESSION_SECRET="change-me-to-a-long-random-secret-min-32-chars"
ADMIN_API_KEY="change-me-to-secure-api-key"
ADMIN_COOKIE_NAME="clinvetia_admin"

# Super Admin Bootstrap (Script: npm run admin:bootstrap)
ADMIN_BOOTSTRAP_USERNAME="superadmin"
ADMIN_BOOTSTRAP_PASSWORD="change-me-min-8-chars"
ADMIN_BOOTSTRAP_EMAIL="admin@example.com"

# Demo Mode
ADMIN_DEMO_ENABLED="false"

# ==========================================
# ADMIN V2 - Enhanced Security & Sessions
# ==========================================

# Session Management
SESSION_TTL_DAYS="7"                    # Default: 7 days, Max: 90 days

# Demo User Protection (optional)
# CSV list of allowed origins for DEMO user login
# ADMIN_DEMO_ALLOWED_ORIGINS="https://clinvetia.com,https://www.clinvetia.com"

# Bootstrap Endpoint (for automated deployments)
ADMIN_BOOTSTRAP_ENABLED="false"         # Set to "true" only during initial setup
# ADMIN_BOOTSTRAP_SECRET="change-me-to-a-different-long-random-secret-min-32-chars"


# ==========================================
# EMAIL - Transactional & Notifications
# ==========================================
EMAIL_ENABLED="false"
EMAIL_PROVIDER="brevo"
EMAIL_FROM="ClinvetIA <info@example.com>"
EMAIL_DRY_RUN="true"
EMAIL_NOTIFY_ADMIN="false"
ADMIN_EMAIL="admin@example.com"

# Brevo API
# BREVO_API_KEY="xkeysib-..."
# BREVO_INBOUND_TOKEN="..."
# INBOUND_EMAIL_DOMAIN="reply.example.com"


# ==========================================
# BOOKING - Calendar & Schedule
# ==========================================
BOOKING_TIMEZONE="Europe/Madrid"
BOOKING_START_TIME="09:00"
BOOKING_END_TIME="17:30"
BOOKING_SLOT_MINUTES="30"
HOLD_TTL_MINUTES="10"

CANCEL_TOKEN_EXPIRY_DAYS="30"
RESCHEDULE_TOKEN_EXPIRY_DAYS="30"


# ==========================================
