# Copy to `.env.local` for local development.
# On Vercel, set these in Project Settings > Environment Variables.

# App
APP_URL=https://example.com

# Database (required)
# Prefer setting DATABASE_URL on Vercel (or POSTGRES_PRISMA_URL as fallback).
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"

# Optional: direct/non-pooled URL (recommended for migrations).
# DATABASE_URL_UNPOOLED="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"

# Admin auth (optional)
# ADMIN_API_KEY="change-me"

# Booking config (optional)
BOOKING_TIMEZONE=Europe/Madrid
BOOKING_START_TIME=09:00
BOOKING_END_TIME=17:30
BOOKING_SLOT_MINUTES=30
HOLD_TTL_MINUTES=20
CANCEL_TOKEN_EXPIRY_DAYS=30
RESCHEDULE_TOKEN_EXPIRY_DAYS=30

# Email (optional)
EMAIL_ENABLED=true
EMAIL_FROM="ClinvetIA <info@clinvetia.com>"
# RESEND_API_KEY="re_..."
# ADMIN_EMAIL="info@clinvetia.com"

# Debug / dev only
ALLOW_TIME_OVERRIDE=false
