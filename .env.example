# ==========================================
# APP CONFIGURATION
# ==========================================
APP_URL=https://example.com

# ==========================================
# DATABASE (Required)
# ==========================================
# Prefer setting DATABASE_URL on Vercel (or POSTGRES_PRISMA_URL as fallback)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"

# Optional: direct/non-pooled URL (recommended for migrations)
# DATABASE_URL_UNPOOLED="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"

# ==========================================
# NEON DATABASE (Additional Variables)
# ==========================================
# Optional: Neon-specific environment variables (auto-generated by Vercel CLI)
# NEON_AUTH_BASE_URL="https://your-project.neonauth.region.aws.neon.tech/database/auth"
# NEON_PROJECT_ID="your-project-id"
# VITE_NEON_AUTH_URL="https://your-project.neonauth.region.aws.neon.tech/database/auth"

# PostgreSQL connection variables (Neon)
# PGDATABASE="database"
# PGHOST="your-project-pooler.region.aws.neon.tech"
# PGHOST_UNPOOLED="your-project.region.aws.neon.tech"
# PGPASSWORD="password"
# PGUSER="user"

# Vercel Postgres aliases
# POSTGRES_DATABASE="database"
# POSTGRES_HOST="your-project-pooler.region.aws.neon.tech"
# POSTGRES_PASSWORD="password"
# POSTGRES_PRISMA_URL="postgresql://user:password@host/db?connect_timeout=15&sslmode=require"
# POSTGRES_URL="postgresql://user:password@host/db?sslmode=require"
# POSTGRES_URL_NON_POOLING="postgresql://user:password@host/db?sslmode=require"
# POSTGRES_URL_NO_SSL="postgresql://user:password@host/db"
# POSTGRES_USER="user"

# ==========================================
# VERCEL
# ==========================================
# Optional: OIDC token for Vercel deployments (auto-generated)
# VERCEL_OIDC_TOKEN="..."

# ==========================================
# ADMIN AUTHENTICATION
# ==========================================
# ADMIN_API_KEY="change-me"
# ADMIN_EMAIL="info@clinvetia.com"

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
EMAIL_ENABLED=true
EMAIL_PROVIDER=brevo
EMAIL_FROM="ClinvetIA <info@clinvetia.com>"

# Brevo (formerly Sendinblue) API key
# BREVO_API_KEY="xkeysib-..."

# Alternative: Resend API key
# RESEND_API_KEY="re_..."

# ==========================================
# BOOKING CONFIGURATION
# ==========================================
BOOKING_TIMEZONE=Europe/Madrid
BOOKING_START_TIME=09:00
BOOKING_END_TIME=17:30
BOOKING_SLOT_MINUTES=30
HOLD_TTL_MINUTES=20

# Token expirations (days)
CANCEL_TOKEN_EXPIRY_DAYS=30
RESCHEDULE_TOKEN_EXPIRY_DAYS=30

# ==========================================
# DEVELOPMENT / DEBUG
# ==========================================
ALLOW_TIME_OVERRIDE=false
